<?xml version="1.0" encoding="UTF-8"?>
<web-app>

<welcome-file-list>
  <welcome-file>login.html</welcome-file>
 </welcome-file-list>
 
 <servlet>
 	<servlet-name>Login</servlet-name>
 	<servlet-class>it.geek.crimini.controller.LoginServlet</servlet-class>
 </servlet>
 
 <servlet>
 	<servlet-name>logout</servlet-name>
 	<servlet-class>it.geek.crimini.controller.LogoutServlet</servlet-class>
 </servlet>
 
 <servlet>
 	<servlet-name>VisualizzaUtenti</servlet-name>
 	<servlet-class>it.geek.crimini.controller.VisualizzaUtentiServlet</servlet-class>
 </servlet>
 
 <servlet>
 	<servlet-name>inserisciUtente</servlet-name>
 	<servlet-class>it.geek.crimini.controller.InserisciUtenteServlet</servlet-class>
 </servlet>
 
 <servlet>
 	<servlet-name>AggiuntoUtente</servlet-name>
 	<servlet-class>it.geek.crimini.controller.AggiuntoUtenteServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/home</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>logout</servlet-name>
	<url-pattern>/logout</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>VisualizzaUtenti</servlet-name>
	<url-pattern>/visualizzaUtenti</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>inserisciUtente</servlet-name>
	<url-pattern>/inserisciUtente</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>AggiuntoUtente</servlet-name>
	<url-pattern>/aggiuntoUtente</url-pattern>
</servlet-mapping>
</web-app>
